{
  "name": "opencode-chat",
  "displayName": "opencode chat",
  "description": "opencode chat extension for the IDE",
  "repository": "https://github.com/kwickramasekara/opencode-chat",
  "publisher": "kwickramasekara",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./out/main.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "opencode-sidebar",
          "title": "opencode",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "opencode-sidebar": [
        {
          "type": "webview",
          "id": "opencode.chatView",
          "name": "Chat"
        }
      ]
    }
  },
  "scripts": {
    "copy-templates": "mkdir -p out/webview/templates && cp src/webview/templates/*.html out/webview/templates/",
    "compile": "tsc -p ./ && npm run copy-templates",
    "publish": "npm run compile && ovsx publish",
    "watch": "npm run copy-templates && tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "license": "MIT"
}
